<h1>Panel de Doctores</h1>
<p>Visualizador de doctores</p>
<table>
	<thead>
		<tr>
			<th width="150"> Avatar</th>
			<th width="200"> Nombre</th>
			<th width="100"> Cumplea√±os</th>
			<th width="100"> Sexo</th>
			<th width="200"> Opcciones</th>
		</tr>
	</thead>
	<tbody >
		<% @doctors.each do |user|%>
		<tr>
			<td><%= render partial: '/users/avatars', locals: {user: user, edit: false}%></td>
			<td><%= user.name %></td>
			<td><%= user.birthday %></td>
			<td><%= user.sex %></td>
			<td><%= link_to 'Eliminar de mi hospital', delete_realtion_path(user: user.id)%></td>
		</tr>
		<%end%>
	</tbody>
	<ul class="pagination">
		<%= will_paginate @doctors %>
	</ul>
	
</table>