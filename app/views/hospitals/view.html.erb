<h1>Administrador de Hospital</h1>
<div class="row">
	<center>
	<div class="small-4 columns" >
		<p>Cantidad de usuario</p>
		<%= @hospital.users.count %>
	</div>
	<div class="small-4 columns" >
		<p>Cantidad de Doctores</p>
		<%= @hospital.users.where(role:'doctor').count %>
	</div>
	<div class="small-4 columns" >
		<p>Cantidad de Pacientes</p>
		<%= @hospital.users.where(role:'patient').count %>
	</div>
	</center>
	<div id="chart"></div>
</div>
<script type="text/javascript">
$(function () {
$('#chart').highcharts({
chart: {
type: 'column'
},
title: {
text: 'Ingresos a la plataforma por tus usuarios los últimos 20 días'
},
subtitle: {
text: 'Por: IDoctore'
},
xAxis: {
type: 'category',
labels: {
rotation: -45,
style: {
fontSize: '13px',
fontFamily: 'Verdana, sans-serif'
}
}
},
yAxis: {
min: 0,
title: {
text: 'Número de ingresos'
}
},
legend: {
enabled: false
},
tooltip: {
pointFormat: 'Ingresos a la plataforma <b>{point.y:.1f} cantidad</b>'
},
series: [{
name: 'Population',
data: <%= raw @hospital_loggins %>,
dataLabels: {
enabled: true,
rotation: -90,
color: '#FFFFFF',
align: 'right',
x: 4,
y: 10,
style: {
fontSize: '13px',
fontFamily: 'Verdana, sans-serif',
textShadow: '0 0 3px black'
}
}
}]
});
});
</script>