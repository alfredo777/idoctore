 <div class="row">
   <% if current_user.role == 'doctor' %>
    <%= link_to post_in_path(user.id, :type => 'diagnostic'), remote: true  do %>
      <div class="stock_menu slide-p" onclick="javascript:$.pageslide({ direction: 'left', href:'#left_hide' })">
		   <%= image_tag('menu/diagnostic.png', width: 60, height: 60)%>
	   </div>
	<%end%>

    <%= link_to post_in_path(user.id, :type => 'note'), remote: true  do %>
	    <div class="stock_menu slide-p" onclick="javascript:$.pageslide({ direction: 'left', href:'#left_hide' })">	     
			 <%= image_tag('menu/note.png', width: 60, height: 60)%>
	    </div>
	<%end%>
	<%end%>
	<%= link_to post_in_path(user.id, :type => 'upload_file'), remote: true  do %>
		<div class="stock_menu slide-p" onclick="javascript:$.pageslide({ direction: 'left', href:'#left_hide' })">	     
	 		 <%= image_tag('menu/analisis2.png', width: 60, height: 60)%>
		</div>
	<%end%>
	 <%= link_to post_in_path(user.id, :type => 'vital_signs'), remote: true  do %>
	    <div class="stock_menu slide-p" onclick="javascript:$.pageslide({ direction: 'left', href:'#left_hide' })">	     
	 			<%= image_tag('menu/plus.png', width: 60, height: 60)%>
	    </div>
	<%end%>
	<% if user.id == current_user.id %>
	<a href="#" data-target="notice_dropdown">
	<div id="notice_for_user" class="notices"></div>
	</a>
	<div id="arrow_notice" style="margin-left:95% !important; margin-top:38px; width:100px; display:none;">
    	<div class="flecha-up" ></div>
    </div>
    <ul id="notice_dropdown" class="wrapper-dropdown" style="left:70% !important; top:50px; display:none;">	
      <% notices.each do |u| %>
       <%= link_to "/options_change_cite?ident_i=#{u.congruence.cite_doctor_id}&amp;type=messages" , remote: true  do %>
       <li>
        <div class="left" style="width:20%;"> <%= image_tag(u.user.avatar.modern) %> </div><div class="left" style="width:77%; margin-left:5px; text-align:justify;">El usuario <%= "#{u.user.name}" %> le ha enviado un mensane.</div>
        <hr>
       </li>
       <%end%>

      <%end%>
    </ul>
    <%end%>

    <script>
      $('#notice_for_user').click(function(){
      	 $('#notice_dropdown').toggle();
      	 $('#arrow_notice').toggle();
      })
    </script>


</div>
