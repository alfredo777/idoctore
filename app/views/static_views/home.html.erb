<div id="loggin_modal" class="large-4 reveal-modal" data-reveal>
	    <fieldset>
	       <legend><%= t('user.login') %></legend>
	       <%= form_tag('/users/create_session') do -%>
  
			  <p  style='color:#1c80cf;'><%=  t('user.mail') %></p>
			  <%= email_field_tag 'email' %>
			   <p  style='color:#1c80cf;'><%=  t('user.password') %></p>
			  <%= password_field_tag 'password' %>
			  
			  <div><%= submit_tag t('user.init'), :class => 'button' %></div>
		  <% end -%>
		  <%= link_to t('user.register'), new_user_path %></br>
		  <%= link_to t('user.missing_password'), missing_password_path %></br>
	    </fieldset>

	    <a class="close-reveal-modal">&#215;</a>
