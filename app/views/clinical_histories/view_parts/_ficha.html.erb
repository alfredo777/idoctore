<div class="row">
  <div  class="large-12 columns">
    <div class="head-ax">Antecedentes heredo familiares</div>
    <div class="body-ax">
      <center>
      <table>
        <thead>
          <tr>
            <th width="30%">Nombre</th>
            <th width="20%">Patología</th>
            <th width="20%">Genealogía</th>
          </tr>
        </thead>
        <tbody>
          <% clinical_history.familial_diseases.each do |fd| %>
          <tr>
            <td><%= fd.name %></td>
            <td><%= fd.pathology %></td>
            <td><%= fd.genealogy %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      </center>
    </div>
  </div>
</div></br>
<div class="row">
  <div  class="large-12 columns">
    <div class="head-ax">Antecedentes personales no patológicos</div>
    <div class="body-ax">
      <center>
      <table>
        <thead>
          <tr>
            <th width="200">Nombre</th>
            <th width="200">Evaluación</th>
          </tr>
        </thead>
        <tbody>
          <% clinical_history.no_pathological_antecedents.each do |fd| %>
          <tr>
            <td><%= fd.name %></td>
            <td><%= fd.evaluation %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      </center>
    </div>
  </div>
</div></br>
<div class="row">
  <div  class="large-12 columns">
    <div class="head-ax">Antecedentes personales patológicos</div>
    <div class="body-ax">
      <center>
      <table>
        <thead>
          <tr>
            <th width="200">Nombre</th>
            <th width="200">Patología</th>
          </tr>
        </thead>
        <tbody>
          <% clinical_history.pathological_antecedents.each do |fd| %>
          <tr>
            <td><%= fd.name %></td>
            <td><%= fd.pathology %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      </center>
    </div>
  </div>
</div></br>
<div class="row">
  <div  class="large-12 columns">
    <div class="head-ax">Padecimiento actual</div>
    <div class="body-ax"><%= clinical_history.suffering %></div>
  </div>
</div></br>
<div class="row">
  <div  class="small-12 columns">
    <div class="head-ax">Interrogatorio por aparatos y sistemas</div>
    <div class="body-ax"><%= clinical_history.interview %></div>
  </div>
</div></br>