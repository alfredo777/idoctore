<!-- formulario de registro -->
<%= form_tag('/users/register') do -%>
  <%= label_tag 'name' %>
  <%= text_field_tag 'name' %>
  <%= label_tag 'email' %>
  <%= email_field_tag 'email' %>
  <%= label_tag 'sex' %>
  <p>
  <div class="small-2 large-1 columns" ><%= label_tag 'Male' %>
  <%= radio_button_tag 'sex', 'male' %></div>
  <div class="small-2 large-1 columns" ><%= label_tag 'Female'%>
  <%= radio_button_tag 'sex', 'female' %></div>
  <%= hidden_field_tag 'role', 'doctor' %>
  </p>
  <br/>
  <br/>
  <br/>
  <br/>
  <%= label_tag 'password' %>
  <%= password_field_tag 'password' %>
  <%= label_tag 'confirm password' %>
  <%= password_field_tag 'confirm_password' %>
  <div><div class="left"><p>Acepto los <%= link_to 'Terminos y Condiciones', terms_and_conditions_path, target: '_blank'%> del sitio</p></div><div  class='right'><%= check_box_tag 'terms', true%></div></div>
  <div><%= submit_tag 'Registrar', :class => 'button' %></div>
<% end -%>
