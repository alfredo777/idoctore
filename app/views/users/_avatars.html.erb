	 <%= image_tag('/assets/users/wooman.png', :class => 'th ', :id => 'blah') if !user.avatar? %>
	<%end%>
<%else%>
	<center>
		<%= image_tag("#{user.avatar.gigant}", :class => 'th ') if user.avatar?  %>
