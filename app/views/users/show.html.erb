       <% when 'male' %>
         <%= image_tag('/assets/users/man.png', :class => 'imge_in_circle avatar_circle') if @user.avatar == nil %>
       <% when 'female' %>
         <%= image_tag('/assets/users/wooman.png', :class => 'imge_in_circle avatar_circle') if @user.avatar == nil %>
      <%end%>
    </div>
    <div class="left large-5"> 
