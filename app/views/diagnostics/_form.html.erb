  <div class="field">
    <%= hidden_field_tag 'user_id', @user.id %>
    <%= hidden_field_tag 'owner_by', current_user.id %>
    <%= hidden_field_tag 'vital_signs', @user.vital_signs.last.id %>
  </div>
  <div class="field">
    <%= label_tag 'interrogation' %><br>
    <%= text_area_tag 'interrogation', nil, rows: 10, cols: 25 %>
  </div>
  <div class="field">
    <%= label_tag 'physical_examination' %><a class="link_to_t" data-target='physical_examination'>No es necesario</a><br>
    <%= text_area_tag 'physical_examination', nil, rows: 10, cols: 25  %>
  </div>
  <div class="field">
    <%= label_tag 'diagnostic_or_clinical_problem' %><br>
    <%= text_area_tag 'diagnostic_or_clinical_problem', nil, rows: 10, cols: 25  %>
  </div>
