  </div>
  <div class="field">
    <%= label_tag 'required_therapies' %><a class="link_to_t" data-target='required_therapies'>No es necesario</a><br>
    <%= text_area_tag 'required_therapies', nil, rows: 10, cols: 25  %>
  </div>
  <div class="field">
    <%= label_tag 'suggested_treatments' %><br>
    <%= text_area_tag 'suggested_treatments', nil, rows: 10, cols: 25  %>
  </div>

  <div class="row">
    <div class="large-3 columns" ><%= label_tag 'chronic'%>
  <%= check_box_tag 'chronic' %></div>
  <div class="large-3 columns" ><%= label_tag 'outstanding'%>
  <%= check_box_tag 'outstanding' %></div>
  <div class="large-3  columns" ><%= label_tag 'serious'%>
  <%= check_box_tag 'serious' %></div>
  <div class="large-3  columns" ><%= label_tag 'inconsequential'%>
  <%= check_box_tag 'inconsequential' %></div>

  </div>
  <div class="actions">
    <%= submit_tag 'Finalizar DiagnÃ³stico', :class => 'button' %>
  </div>
<% end %>
