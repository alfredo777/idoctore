
<%= form_tag('/diagnostics/destroy') do -%>
    <%= hidden_field_tag 'diagnostic', dt.id %>
	<%= hidden_field_tag 'user_id', @user.id %>
	<%= hidden_field_tag 'owner_id', current_user.id %>
	<%= label_tag 'Junstificación'%>
	<%= text_area_tag 'causes',nil, rows: 15 %>
	<%= label_tag 'Elija una causa'%>

	<%= select_tag "justify", options_for_select([ "Error", "New diagnostic", 'Other' ]) %>
	<%= submit_tag 'Eliminar diagnóstico', :class => 'button' %>
<%end%>