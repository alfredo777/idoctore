<%= form_tag('/diagnostics/add_note') do -%>
<p  class="large-5"><%= label_tag 'Diagnostic'%> <%= select_tag "diagnostic_id", options_from_collection_for_select(@user.diagnostics.last(20).reverse, "id", "created_at") %></p>
<p  class="large-5"><%= label_tag 'Vital Signs'%> <%= select_tag "last_signs", options_from_collection_for_select(@user.vital_signs.last(3).reverse, "id", "created_at") %></p>
<%= hidden_field_tag 'user_id', current_user.id %>
<p class="left large-5 margin-regular"> <%= label_tag 'Note'%>  <%= text_area_tag 'content', nil, rows: 10, cols: 25 %></p>
<p class="left large-5 margin-regular"> <%= label_tag 'New treatment'%>  <%= text_area_tag 'new_treatment', nil, rows: 10, cols: 25 %></p>

<p class="large-9"><%= submit_tag 'Postear nota', :class => 'button'%></p>
<%end%>
