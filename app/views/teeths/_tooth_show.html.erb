<% if tooth.top || tooth.center || tooth.bottom || tooth.left || tooth.right %>
<div class="single-tooth problem left" data-target="toot-container-<%=tooth.number%>"><%=tooth.number%></div>
<%else%>
<div class="single-tooth  left" data-target="toot-container-<%=tooth.number%>"><%=tooth.number%></div>
<%end%>
<div id="toot-container-<%=tooth.number%>" class="tooth-options left" style="display:none; z-index:1; position:absolute;">
  <p class="right closer-t" data-target="toot-container-<%=tooth.number%>" style="font-size:25px; margin-top:-20px; cursor:pointer;">X</p>
  <div style="margin-left: 20px; margin-top:-15px; margin-bottom:35px;">
    <div style="width:25%;" class="left">
      <div class="checkt top-part" style="<%= 'border-top: 50px solid #FACC2E;' if tooth.top %>"></div>
      <div class="checkt center-part"  style="<%= 'background: #FACC2E;' if tooth.center %>"><%= tooth.number %></div>
      <div class="checkt bottom-part" style="<%= 'border-bottom: 50px solid #FACC2E;' if tooth.bottom %>" ></div>
      <div class="checkt left-part" style="<%= 'border-left: 50px solid #FACC2E;' if tooth.left %>" ></div>
      <div class="checkt right-part" style="<%= 'border-right: 50px solid #FACC2E;' if tooth.right %>" ></div>
    </div>
    <div class="left" style="width:75%; margin-top:-10px;">
      <h2>Observaciones</h2>
      <div class="top-xxd">
        <b>Nota</b>
        <p><%= tooth.note %></p>
      </div>
      <div class="top-xxd">
        <b>Observaci√≥n</b>
